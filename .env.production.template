# Production Environment Template
# Copy this file to .env on your production server and fill in the values

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Secrets - Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
APP_KEYS=
API_TOKEN_SALT=
ADMIN_JWT_SECRET=
TRANSFER_TOKEN_SALT=
JWT_SECRET=
ENCRYPTION_KEY=

# Database (SQLite)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# CORS - Add your frontend domain(s)
CORS_ORIGIN=

# AWS S3 for Media Storage
UPLOAD_PROVIDER=aws-s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=

# Public URLs
STRAPI_URL=
STRAPI_ADMIN_URL=

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_DEFAULT_FROM=noreply@cuaghana.org
EMAIL_DEFAULT_REPLY_TO=info@cuaghana.org
