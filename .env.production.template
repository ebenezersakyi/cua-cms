# Production Environment Template
# Copy this file to .env on your production server and fill in the values

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Secrets - Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
APP_KEYS=
API_TOKEN_SALT=
ADMIN_JWT_SECRET=
TRANSFER_TOKEN_SALT=
JWT_SECRET=
ENCRYPTION_KEY=

# Database (SQLite)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# CORS - Add your frontend domain(s)
CORS_ORIGIN=

# AWS S3 for Media Storage
UPLOAD_PROVIDER=aws-s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=

# Public URLs
STRAPI_URL=
STRAPI_ADMIN_URL=

# Email (Hostinger SMTP)
# Create an email account in your Hostinger panel
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
EMAIL_DEFAULT_FROM=your-email@yourdomain.com
EMAIL_DEFAULT_REPLY_TO=your-email@yourdomain.com
ADMIN_EMAIL=your-email@yourdomain.com
