# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=development

# Secrets (Generate new values for production)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
APP_KEYS="toBeModified1,toBeModified2"
API_TOKEN_SALT=tobemodified
ADMIN_JWT_SECRET=tobemodified
TRANSFER_TOKEN_SALT=tobemodified
JWT_SECRET=tobemodified
ENCRYPTION_KEY=tobemodified

# Database (SQLite for both development and production)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Optional: For PostgreSQL (if you prefer for production):
# DATABASE_CLIENT=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=cua_cms
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# CORS Configuration (Add your frontend URLs)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Upload Provider (local for development, aws-s3 for production)
UPLOAD_PROVIDER=local

# AWS S3 Configuration (Required for production media storage)
# Create an S3 bucket and IAM user with S3 access
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_REGION=us-east-1
# AWS_BUCKET=cua-cms-media

# Email Configuration (Hostinger SMTP)
# Create an email account in your Hostinger panel
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
EMAIL_DEFAULT_FROM=your-email@yourdomain.com
EMAIL_DEFAULT_REPLY_TO=your-email@yourdomain.com
ADMIN_EMAIL=your-email@yourdomain.com

# Analytics
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Public URLs (for production)
# STRAPI_URL=https://cms.cuaghana.org
# STRAPI_ADMIN_URL=https://cms.cuaghana.org/admin
