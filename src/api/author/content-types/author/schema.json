{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Authors for news articles"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "bio": {
      "type": "richtext"
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "email": {
      "type": "email"
    },
    "news_articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-article.news-article",
      "mappedBy": "author"
    }
  }
}
