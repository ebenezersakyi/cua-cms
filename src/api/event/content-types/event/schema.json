{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Manage events, programs, and initiatives"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "shortDescription": {
      "type": "string",
      "maxLength": 200
    },
    "eventDate": {
      "type": "date",
      "required": true
    },
    "eventTime": {
      "type": "time"
    },
    "location": {
      "type": "string"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Training",
        "Community",
        "Financial Literacy",
        "Agricultural",
        "Women Empowerment",
        "Other"
      ]
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "registrationLink": {
      "type": "string"
    },
    "registrationDeadline": {
      "type": "date"
    },
    "capacity": {
      "type": "integer"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Upcoming", "Ongoing", "Completed", "Cancelled"],
      "default": "Upcoming"
    },
    "relatedEvents": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::event.event"
    }
  }
}
