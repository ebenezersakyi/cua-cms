{
  "kind": "collectionType",
  "collectionName": "management_teams",
  "info": {
    "singularName": "management-team",
    "pluralName": "management-teams",
    "displayName": "About: Management Team",
    "description": "Management staff information"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "position": {
      "type": "string",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "enum": [
        "Executive",
        "Finance",
        "Operations",
        "Training",
        "IT",
        "Marketing",
        "HR"
      ]
    },
    "bio": {
      "type": "richtext",
      "required": true
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "qualifications": {
      "type": "richtext"
    },
    "linkedIn": {
      "type": "string"
    },
    "displayOrder": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
