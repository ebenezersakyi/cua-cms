{
  "kind": "collectionType",
  "collectionName": "credit_unions",
  "info": {
    "singularName": "credit-union",
    "pluralName": "credit-unions",
    "displayName": "Credit Union",
    "description": "Directory of all credit unions in Ghana"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "region": {
      "type": "enumeration",
      "enum": [
        "Greater Accra",
        "Ashanti",
        "Western",
        "Eastern",
        "Central",
        "Northern",
        "Upper East",
        "Upper West",
        "Volta",
        "Bono",
        "Bono East",
        "Ahafo",
        "Savannah",
        "North East",
        "Oti"
      ]
    },
    "district": {
      "type": "string"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "gpsCoordinates": {
      "type": "component",
      "repeatable": false,
      "component": "location.gps-location"
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "website": {
      "type": "string"
    },
    "establishedYear": {
      "type": "integer"
    },
    "memberCount": {
      "type": "integer"
    },
    "totalAssets": {
      "type": "decimal"
    },
    "services": {
      "type": "component",
      "repeatable": true,
      "component": "service.service-item"
    },
    "openingHours": {
      "type": "component",
      "repeatable": false,
      "component": "hours.business-hours"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "chapter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::chapter.chapter",
      "inversedBy": "credit_unions"
    },
    "testimonials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::testimonial-member.testimonial-member",
      "mappedBy": "creditUnion"
    }
  }
}
