{
  "kind": "collectionType",
  "collectionName": "contact_messages",
  "info": {
    "singularName": "contact-message",
    "pluralName": "contact-messages",
    "displayName": "Contact Message",
    "description": "Store contact form submissions"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "messageType": {
      "type": "enumeration",
      "enum": ["General Inquiry", "Support", "Partnership", "Training", "Membership"]
    },
    "status": {
      "type": "enumeration",
      "enum": ["New", "In Progress", "Resolved", "Archived"],
      "default": "New"
    },
    "responseNote": {
      "type": "text"
    }
  }
}
