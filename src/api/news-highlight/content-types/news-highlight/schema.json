{
  "kind": "singleType",
  "collectionName": "news_highlights",
  "info": {
    "singularName": "news-highlight",
    "pluralName": "news-highlights",
    "displayName": "News Highlights",
    "description": "Featured news articles displayed as highlights on the homepage"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "isEnabled": {
      "type": "boolean",
      "default": true
    },
    "highlightedNews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-article.news-article"
    },
    "maxItems": {
      "type": "integer",
      "default": 5,
      "min": 1,
      "max": 10
    },
    "animationSpeed": {
      "type": "enumeration",
      "enum": ["slow", "medium", "fast"],
      "default": "medium"
    },
    "backgroundColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "default": "#003366"
    },
    "textColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "default": "#ffffff"
    },
    "pauseOnHover": {
      "type": "boolean",
      "default": true
    },
    "showIcon": {
      "type": "boolean",
      "default": true
    },
    "iconName": {
      "type": "string",
      "default": "fa-bullhorn"
    }
  }
}
