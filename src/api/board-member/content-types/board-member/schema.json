{
  "kind": "collectionType",
  "collectionName": "board_members",
  "info": {
    "singularName": "board-member",
    "pluralName": "board-members",
    "displayName": "About: Board Member",
    "description": "Board of Directors information"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "position": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "richtext",
      "required": true
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "qualifications": {
      "type": "richtext"
    },
    "responsibilities": {
      "type": "richtext"
    },
    "linkedIn": {
      "type": "string"
    },
    "displayOrder": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
