{
  "collectionName": "components_shared_ticker_messages",
  "info": {
    "displayName": "Ticker Message",
    "description": "Individual ticker message for news ticker",
    "icon": "bullhorn"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "link": {
      "type": "string"
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 10
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
